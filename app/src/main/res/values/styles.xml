<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/playfair_display_bold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextRegular">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/playfair_display_regular</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextItem">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/playfair_display_black</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextLogin">
        <item name="android:fontFamily">@font/playfair_display_bold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
